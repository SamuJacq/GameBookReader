<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderJacqueminS.DescriptionBook">
	<StackPanel x:Name="Description" Margin="8" Background="#c0b8d8" Width="300">
		<TextBlock x:Name="Title" Text="title"/>
		<TextBlock x:Name="ISBN" Text="isbn"/>
		<TextBlock x:Name="Author" Text="author"/>
		<TextBlock x:Name="Resume" TextWrapping="Wrap" Text="resume"/>
		<Button x:Name="boutonResume"> resume </Button>
		<Button x:Name="lecture"> lire </Button>
	</StackPanel>
</UserControl>
